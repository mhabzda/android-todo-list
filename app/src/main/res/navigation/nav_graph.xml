<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.todo.list.ui.list.ListFragment"
        android:label="@string/list_fragment_label"
        tools:layout="@layout/fragment_list">

        <action
            android:id="@+id/action_to_item_fragment"
            app:destination="@id/itemFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />

    </fragment>

    <fragment
        android:id="@+id/itemFragment"
        android:name="com.todo.list.ui.item.ItemFragment"
        android:label="@string/item_fragment_label"
        tools:layout="@layout/fragment_item">

        <argument
            android:name="id"
            android:defaultValue="@null"
            app:argType="org.joda.time.DateTime"
            app:nullable="true" />
    </fragment>

</navigation>
